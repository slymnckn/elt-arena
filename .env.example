# ==============================================
# ELT ARENA - PRODUCTION ENVIRONMENT CONFIG
# ==============================================
# Bu dosyayı .env.local olarak kopyalayın ve değerleri doldurun

# NODE ENVIRONMENT
NODE_ENV=production

# DATABASE CONFIGURATION
# PostgreSQL bağlantı string'i - kendi değerlerinizi girin
DATABASE_URL=postgresql://elt_arena_user:your_secure_password@localhost:5432/elt_arena

# JWT AUTHENTICATION
# Güçlü bir secret key oluşturun (minimum 32 karakter)
JWT_SECRET=your-super-secure-jwt-key-change-this-in-production-32-chars-minimum
JWT_EXPIRES_IN=7d

# APPLICATION URL
# Sitenizin domain adresi
NEXTAUTH_URL=https://eltarena.com

# APPLICATION CONFIGURATION
PORT=3000

# FILE UPLOAD CONFIGURATION
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=50
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,mp4,mp3,doc,docx,ppt,pptx

# SECURITY SETTINGS (Production için)
SECURE_COOKIES=true
TRUST_PROXY=true

# ==============================================
# KURULUM TALİMATLARI
# ==============================================
# 1. Bu dosyayı .env.local olarak kopyalayın
# 2. DATABASE_URL'yi kendi PostgreSQL bilgilerinizle doldurun
# 3. JWT_SECRET'i güçlü bir key ile değiştirin
# 4. NEXTAUTH_URL'yi domain adresinizle değiştirin
# 5. Diğer ayarları ihtiyacınıza göre düzenleyin
